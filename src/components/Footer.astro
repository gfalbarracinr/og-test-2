---
import { Icon } from "astro-icon/components";
---

<style>
  .container {
    display: flex;
    line-height: 50px;
    color: #fff;
    background: #6b2875;
    padding: 40px 0;
    margin-top: 2em;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  .logo {
    width: 170px;
  }
  .contact-container {
    margin: 5px;
    line-height: 16px;
    font-size: 14px;
  }
  .contact-container a,
  .social-media a {
    color: white;
    text-decoration: none;
  }
  .social-media {
    font-size: 30px;
    color: white;
    display: flex;
    gap: 5px;
  }
  .icon {
    width: 30px;
    height: 30px;
  }
  .version {
    background: #6b2875;
    display: flex;
    padding: 0px 1rem 2px 0px;
    justify-content: end;
  }
</style>
<footer>
  <section class="container">
    <article class="logo-container">
      <img
        class="logo"
        src="/images/logo_white.png"
        alt="Ekumen logo"
        loading="lazy"
      />
    </article>
    <article class="contact-container">
      <p>
        +1 (408) 414-7455 |
        <a href="mailto:contact@ekumenlabs.com">contact@ekumenlabs.com</a>
      </p>
      <p>Copyright &copy; {new Date().getFullYear()}. All rights reserved.</p>
    </article>
    <article class="social-media">
      <div class="icon">
        <a
          href="https://github.com/Ekumen-OS"
          target="_blank"
          aria-label="github"
        >
          <Icon name="mdi:github" />
        </a>
      </div>
      <div class="icon">
        <a
          href="https://www.linkedin.com/company/ekumenlabs"
          target="_blank"
          aria-label="linkedin"
        >
          <Icon name="mdi:linkedin" />
        </a>
      </div>
      <div class="icon">
        <a
          href="https://www.instagram.com/ekumenlabs/"
          target="_blank"
          aria-label="instagram"
        >
          <Icon name="mdi:instagram" />
        </a>
      </div>
      <div class="icon">
        <a
          href="https://twitter.com/ekumenlabs"
          target="_blank"
          aria-label="twitter"
        >
          <Icon name="mdi:twitter" />
        </a>
      </div>
      <div class="icon">
        <a
          href="https://www.facebook.com/ekumenlabs"
          target="_blank"
          aria-label="facebook"
        >
          <Icon name="mdi:facebook" />
        </a>
      </div>
    </article>
  </section>
</footer>
